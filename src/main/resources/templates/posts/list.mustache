{{>layouts/header}}


<div class="container">
    <table class="table table-striped table-hover" style="border-color: #78C2AD" border="1">
        <thead class="table-primary">
        <tr>
            <th scope="col" style="width: 5%;text-align: center">Id</th>
            <th scope="col" style="width: 55%;text-align: center">제목</th>
            <th scope="col" style="width: 15%;text-align: center">회원 이름</th>
            <th scope="col" style="width: 20%;text-align: center">작성 날짜</th>
            <th scope="col" style="width: 5%;font-size: 15px">💬</th>
            <th scope="col" style="width: 5%;font-size: 15px">❤</th>
        </tr>
        </thead>
        <tbody>
        {{#posts}}
            <tr>
                <th scope="row" style="text-align: center">{{id}}</th>
                <td style="text-align: center"><a href="/posts/{{id}}">{{title}}</a></td>
                <th scope="row" style="text-align: center"><a>{{userName}}</a></th>
                <th scope="row" style="text-align: center">{{createdAt}}</th>
                <th scope="row" style="text-align: center">{{commentNum}}</th>
                <th scope="row" style="text-align: center">{{likeNum}}</th>
            </tr>
        {{/posts}}
        </tbody>
    </table>
</div>

<ul class="pagination justify-content-center">
    {{#condition}}

        {{#keyword}}
            <li class="page-item"><a class="page-link" href="?condition={{condition}}&keyword={{keyword}}&page={{previous}}">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="?condition={{condition}}&keyword={{keyword}}&page={{next}}">Next</a></li>
        {{/keyword}}
    {{/condition}}
    {{^condition}}
        {{^keyword}}
            <li class="page-item"><a class="page-link" href="?page={{previous}}">Previous</a></li>
            <li class="page-item"><a class="page-link" href="?page={{next}}">Next</a></li>
        {{/keyword}}
    {{/condition}}
</ul>


<!--게시글 작성 버튼 -->

<form class="container justify-content-center " form action="/posts/write" method="get">
    <div align="right">
        <button class="btn btn-primary" type="submit">게시글 작성</button>
    </div>
</form>


<br>

<!--검색-->


<form class="form-inline w-100 justify-content-center " action ="/posts" method = "get">

    <div class="selectBox">
        <select name="condition" class="select">
            <option value="title">제목 검색</option>
            <option value="userName">회원명 검색</option>
        </select>
    </div>
    {{#keyword}}
        <input class="form-control me-sm-2" type="text" name="keyword" value="{{keyword}}" placeholder="검색">
    {{/keyword}}
    {{^keyword}}
        <input class="form-control me-sm-2"  name="keyword" type="search" placeholder="검색">
    {{/keyword}}
    <button class="btn btn-light my-2 my-sm-0" type="submit">검색</button>
</form>

