{{>layouts/header}}



<form class="container">
    <table class="table table-striped table-hover" style="table-layout: fixed;width: 100%">
        <thead class="table-primary">
        <tr>
            <th scope="col" style="width: 5%;text-align: center">Id</th>
            <th scope="col" style="width: 60%;text-align: center">제목</th>
            <th scope="col" style="width: 10%;text-align: center">회원 이름</th>
            <th scope="col" style="width: 20%;text-align: center">작성 날짜</th>
<!--            <th scope="col">💬</th>-->
            <th scope="col" style="width: 5%;font-size: 15px">❤</th>
        </tr>
        </thead>
        <tbody>
        {{#posts}}
            <tr>
                <th scope="row" style="text-align: center">{{id}}</th>
                <td style="text-align: center"><a href="/posts/{{id}}">{{title}}</a></td>
                <th scope="row" style="text-align: center">{{userName}}</th>
                <th scope="row" style="text-align: center">{{createdAt}}</th>
                <th scope="row" style="text-align: center">{{likeNum}}</th>
            </tr>
        {{/posts}}
        </tbody>
    </table>

    <ul class="pagination justify-content-center">
        <li class="page-item"><a class="page-link" href="?page={{previous}}">Previous </a> </li>
        <li class="page-item"><a class="page-link" href="?page={{next}}">Next</a></li>
    </ul>

</form>

<!--게시글 작성 버튼 -->

<form class="container justify-content-center " form action="/posts/write" method="get">
    <div align="right">
        <button class="btn btn-primary" type="submit">게시글 작성</button>
    </div>
</form>


<br>

<!--검색-->


<form class="form-inline w-100 justify-content-center ">

    <div class="selectBox">
        <select name="searchCondition" class="select">
            <option value="titleCon">제목 검색</option>
            <option value="userNameCon">회원명 검색</option>
        </select>
    </div>

    <input class="form-control me-sm-2" type="search" placeholder="검색">
    <button class="btn btn-light my-2 my-sm-0" type="submit">검색</button>
</form>

